    <scm>
        <url>https://github.com/com.ocdsoft.bacta/cu</url>
        <connection>scm:git:git://github.com/bacta/cu.git</connection>
        <developerConnection>scm:git:git@github.com:bacta/cu.git</developerConnection>
    </scm>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
